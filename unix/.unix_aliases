# nvim
alias v="nvim"
alias n="nvim"
alias vim="nvim"

# python3
alias p="python3"

# change directory depending on file system
am() {
  if [ -d /mnt/c/anima-mundi ]; then
    cd /mnt/c/anima-mundi || return
  elif [ -d /home/cj/anima-mundi ]; then
    cd /home/cj/anima-mundi || return
  else
    echo "anima-mundi directory not found." >&2
    return 1
  fi
}

