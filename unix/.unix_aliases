# terminal
alias ll="ls -alX"
alias lt="ls -ctalX"
alias c="clear"
alias gs="git status"
alias sm="bash $HOME/git/bash/run-menu.sh"
alias z="eza -al"

# Clipboard - works on both Linux and WSL
if command -v xclip &>/dev/null; then
  alias copy="xclip -selection clipboard"
elif command -v clip.exe &>/dev/null; then
  alias copy="clip.exe"
fi

# nvim
alias v="nvim"
alias n="nvim"
alias vim="nvim"

# python3
alias p="python3"

# change directory depending on file system
kb() {
  if [ -d /mnt/c/kb ]; then
    cd /mnt/c/kb || return
  elif [ -d $HOME/git/kb ]; then
    cd $HOME/git/kb || return
  else
    echo "kb directory not found." >&2
    return 1
  fi
}

# windows home
alias wh="/mnt/c"
# website
alias website="$HOME/git/php-website"
# resume
alias resume="$HOME/git/tex-resume"
# youtune-dl
[[ -f /usr/local/bin/youtube-dl ]] && alias youtube-dl='python3 /usr/local/bin/youtube-dl'

# export PATH
export PATH="$PATH:/opt/nvim/"
