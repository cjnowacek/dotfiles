# terminal
alias ll="ls -alX"
alias lt="ls -ctalX"
alias c="clear"
alias gs="git status"
alias sm="bash $HOME/git/bash/run-menu.sh"
alias z="eza -al"

# Clipboard - works on both Linux and WSL
if command -v xclip &>/dev/null; then
  alias copy="xclip -selection clipboard"
elif command -v clip.exe &>/dev/null; then
  alias copy="clip.exe"
fi

# nvim
alias v="nvim"
alias n="nvim"
alias vim="nvim"

# python3
alias p="python3"

# change directory depending on file system
kb() {
  if [ -d "$HOME/projects/knowledge-base" ]; then
    cd "$HOME/projects/knowledge-base" || return
  else
    echo "kb directory not found." >&2
    return 1
  fi
}

# windows home
alias wh="/mnt/c"
# website
alias website="$HOME/git/php-website"
# resume
alias resume="$HOME/git/tex-resume"
# youtune-dl
[[ -f /usr/local/bin/youtube-dl ]] && alias youtube-dl='python3 /usr/local/bin/youtube-dl'

# claude code init scripts
_kb_dir() {
  if [ -d "$HOME/projects/knowledge-base" ]; then
    echo "$HOME/projects/knowledge-base"
  fi
}

cc-work() {
  local d; d=$(_kb_dir) || return 1
  claude --append-system-prompt "$(cat "$d/init/work.md")"
}

cc-ifs() {
  local d; d=$(_kb_dir) || return 1
  claude --append-system-prompt "$(cat "$d/init/ifs.md")"
}

# export PATH
export PATH="$PATH:/opt/nvim/"
